{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/styles/*": ["./app/(appLayer)/styles/*"],
      "@/appLayer/*": ["app/(appLayer)/*"],
      "@/pagesLayer/*": ["./app/(pagesLayer)/*"],
      "@/widgetsLayer/*": ["./app/widgetsLayer/*"],
      "@/featuresLayer/*": ["./app/featuresLayer/*"],
      "@/entitiesLayer/*": ["./app/entitiesLayer/*"],
      "@/sharedLayer/*": ["./app/sharedLayer/*"],
      
      
      "@/*": ["./*"],
      "*": ["./app/*"]
      // "*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/sharedLayer/config/i18n/i18nConfig.ts",
    "app/(appLayer)/providers/ServerIntlProvider/ui/ServerIntlProvider.jsx"
, "middleware.оі", "next.config.js", "app/sharedLayer/stories/color.mdx"  ],
  "exclude": ["node_modules"],
  
}
